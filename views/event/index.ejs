<%- include('../partials/header.ejs')%>
<main class="flex flex-col justify-center gap-10 h-full text-center">
  <%if(categories){%> <%categories.forEach(category=>{%>
  <div class="flex flex-col gap-4">
    <h1 class="font-bold text-2xl"><%=category%></h1>
    <%events.forEach(event=>{%> <%if(event.category === category){%>
    <a href="/events/<%=event._id%>"
      ><p class="md:text-xl"><%=event.title%></p></a
    >
    <%}%> <%});%>
  </div>
  <%}); }else{%>
  <p class="text-lg font-semibold">There are no events to display.</p>
  <%}%>
</main>
<%- include('../partials/footer.ejs')%>
