<%- include('../partials/header.ejs')%>
<h2 class="text-xl text-center font-semibold">Welcome, <%=user.firstName%></h2>

<div class="flex justify-evenly items-center w-full h-full">
  <div
    class="flex flex-col items-center bg-slate-100 text-black rounded-lg md:w-4/12 lg:w-2/12 py-4"
  >
    <p class="text-xl font-bold text-center">Events</p>
    <div class="flex flex-col justify-center items-center w-full">
      <%if(events.length){%> <%events.forEach(event =>{%>
      <div class="flex justify-between sm:w-3/4 md:w-2/4">
        <a class="text-sm" href="/events/<%=event.id%>"
          ><p><%=event.title%></p></a
        >
        <form>
          <button
            type="submit"
            formmethod="GET"
            formaction="/events/<%=event._id%>/edit"
          >
            <svg
              class="w-5"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"
              ></path>
            </svg>
          </button>
          <button
            type="submit"
            formmethod="POST"
            formaction="/events/<%=event._id%>?_method=DELETE"
          >
            <svg
              class="w-5"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
              ></path>
            </svg>
          </button>
        </form>
      </div>
      <%});%> <%}else{%>
      <p class="text-center md:text-base lg:text-lg font-normal">
        You have not created any events
      </p>
      <%}%>
    </div>
  </div>

  <div
    class="flex flex-col items-center bg-slate-100 text-black rounded-lg w-3/12 py-4"
  >
    <div class="flex justify-evenly w-2/3">
      <p class="text-xl font-bold text-center">RSVPs</p>
      <p class="text-xl font-bold text-center">Going?</p>
    </div>
    <div class="flex flex-col justify-center items-center w-full">
      <%if(rsvps.length){%> <%rsvps.forEach(rsvp =>{%>
      <div class="flex justify-between sm:w-3/4 md:w-2/4">
        <a class="text-sm" href="/events/<%=rsvp.event%>"
          ><p><%=rsvp.title%></p></a
        >
        <p><%=rsvp.status%></p>
      </div>
      <%});%> <%}else{%>
      <p class="text-center md:text-base lg:text-lg font-normal">
        You have not created any RSVPs.
      </p>
      <%}%>
    </div>
  </div>
</div>
<%- include('../partials/footer.ejs')%>
